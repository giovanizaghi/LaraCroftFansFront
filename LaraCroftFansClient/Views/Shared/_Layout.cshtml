    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>

    <div id="fb-root"></div>
    <script>
        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = 'https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v3.0&appId=607176156071617&autoLogAppEvents=1';
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>


    <script>
        $(document).ready(function () {
            $(".sub-menu-item").mouseover(function (data) {
                $(".home-submenu").hide();
                $(this.nextElementSibling).show('blind');
            });

            $(".home-submenu").mouseleave(function (data) {
                $(this).hide('blind');
            });

            $(".menu-items>li>a").mouseover(function () {
                if (this.className != "sub-menu-item") {
                    $(".home-submenu").hide();
                }
            });
        });
    </script>

