@model LaraCroftFansClient.Models.posts

@{
    string imageLink = "http://admin.laracroftfans.com/Images/Posts/" + Model.image;
    string userImageLink = "http://admin.laracroftfans.com/Images/Users/image" + Model.iduser + ".jpg";
    string thisUrl = "http://www.laracroftfans.com/ViewPost/" + Model.id;
}

<div class="article">
    <div class="inner-article-img" style="background-image: url('@imageLink');">
        <span class="breadcumb-article">Home <i class="fa fa-angle-right fa-fw"></i> @Model.tags.description <i class="fa fa-angle-right fa-fw"></i> @Model.title.Substring(0, 20) ...</span>
    </div>
    <div class="inner-article">

        <div class="row">
            <div class="text">
                <h1 class="post-title">@Model.title</h1>
                <i class="fa fa-user fa-fw"></i>
                <span style="color:#808080;">@Model.users.name | @Model.postdate.ToString("dddd, MMMM d, yyyy")</span>
                <hr />
                <div class="content-article">
                    @Html.Raw(Model.content)
                </div>

                <div class="row">
                    <div class="about-author">
                        <div class="col-md-2">
                            <img class="user-image" src="@userImageLink" />
                        </div>
                        <div class="col-md-7">
                            <h4><b>Writed by <a href="#">@Model.users.name</a></b></h4>
                            <span>Lara Croft Fans Member</span>
                        </div>
                    </div>
                </div>
                <br />

                <!-- Lc_fans_article_1 -->
                <ins class="adsbygoogle"
                     style="display:inline-block;width:100%;height:90px; margin-bottom: 100px; margin-top: 100px;"
                     data-ad-client="ca-pub-5534557502262674"
                     data-ad-slot="7989033486"></ins>
                <script>
                    (adsbygoogle = window.adsbygoogle || []).push({});
                </script>

                <div class="fb-comments" data-href="@thisUrl" data-numposts="5" data-width="100%"></div>

            </div>
            <input id="tagID" type="hidden" value="@Model.idtag" />
        </div>
    </div>
</div>
